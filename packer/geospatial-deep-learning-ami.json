{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "docker_version": ""
  },
  "builders": [
      {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-west-2",
            "source_ami": "ami-0b63040ee445728bf",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "{{isotime \"2006-01-02\"}}-geospatial-deeplearning",
            "ami_description": "Ubuntu deep learning + spatial Python packages",
            "iam_instance_profile": "CloudWatchAgentServerRole"
      }
  ],
      "provisioners": [
        {
          "type": "file",
          "source": "packer/install-cloudwatch.sh",
          "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "inline":[
              "sleep 30",
              "wget https://raw.githubusercontent.com/NateMietk/modeling-human-ignition/master/src/python/spatial_torch_env.yml",
              "conda env create -f spatial_torch_env.yml",
              "sudo bash install-cloudwatch.sh"
            ]
        }
    ]
}
